<% if current_user %>
  <form action="/posts/<%=photo.id%>/comments" method="post"> 
    <input type="hidden" name="post_id" value="<%=photo.id%>">
    <input type="hidden" name="handle" value="<%=current_user.handle%>">
    <textarea name="comment"></textarea>
    <input type="submit" value="Comment">
  </form>
<% end %>